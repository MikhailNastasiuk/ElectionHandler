{
  "openapi":"3.1.0",
  "info":{
    "title":"Election Handler API",
    "description":"Only for testing purposes",
    "version":"1.0"
  },
  "servers":[
    {
      "url":"http://localhost:8080",
      "description":"Generated server url"
    }
  ],
  "paths":{
    "/api/v1/voting/add-vote":{
      "post":{
        "tags":[
          "Voting"
        ],
        "summary":"Add user voting",
        "operationId":"addVoting",
        "requestBody":{
          "content":{
            "application/json":{
              "schema":{
                "$ref":"#/components/schemas/VotingRequest"
              }
            }
          },
          "required":true
        },
        "responses":{
          "200":{
            "description":"OK"
          }
        }
      }
    },
    "/api/v1/votes/start-vote/{voteIdentifier}":{
      "post":{
        "tags":[
          "Votes"
        ],
        "summary":"Start vote",
        "operationId":"startVote",
        "parameters":[
          {
            "name":"voteIdentifier",
            "in":"path",
            "required":true,
            "schema":{
              "type":"string"
            }
          }
        ],
        "responses":{
          "200":{
            "description":"OK"
          }
        }
      }
    },
    "/api/v1/votes/remove-vote/{voteIdentifier}":{
      "post":{
        "tags":[
          "Votes"
        ],
        "summary":"Remove vote",
        "operationId":"removeVote",
        "parameters":[
          {
            "name":"voteIdentifier",
            "in":"path",
            "required":true,
            "schema":{
              "type":"string"
            }
          }
        ],
        "responses":{
          "200":{
            "description":"OK"
          }
        }
      }
    },
    "/api/v1/votes/add-vote":{
      "post":{
        "tags":[
          "Votes"
        ],
        "summary":"Add new vote",
        "operationId":"addVote",
        "requestBody":{
          "content":{
            "application/json":{
              "schema":{
                "$ref":"#/components/schemas/VoteDataPayload"
              }
            }
          },
          "required":true
        },
        "responses":{
          "200":{
            "description":"OK"
          }
        }
      }
    },
    "/api/v1/votes/add-option/{voteIdentifier}":{
      "post":{
        "tags":[
          "Votes"
        ],
        "summary":"Add new option to vote",
        "operationId":"addOptionToVote",
        "parameters":[
          {
            "name":"voteIdentifier",
            "in":"path",
            "required":true,
            "schema":{
              "type":"string"
            }
          }
        ],
        "requestBody":{
          "content":{
            "application/json":{
              "schema":{
                "$ref":"#/components/schemas/VoteOptionPayload"
              }
            }
          },
          "required":true
        },
        "responses":{
          "200":{
            "description":"OK"
          }
        }
      }
    },
    "/api/v1/users/add":{
      "post":{
        "tags":[
          "Users"
        ],
        "summary":"Add new user",
        "operationId":"addUser",
        "requestBody":{
          "content":{
            "application/json":{
              "schema":{
                "$ref":"#/components/schemas/UserRequest"
              }
            }
          },
          "required":true
        },
        "responses":{
          "200":{
            "description":"OK",
            "content":{
              "*/*":{
                "schema":{
                  "$ref":"#/components/schemas/UserResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/votes/remove-option/{voteIdentifier}":{
      "patch":{
        "tags":[
          "Votes"
        ],
        "summary":"Remove option from vote",
        "operationId":"removeOptionFromVote",
        "parameters":[
          {
            "name":"voteIdentifier",
            "in":"path",
            "required":true,
            "schema":{
              "type":"string"
            }
          }
        ],
        "requestBody":{
          "content":{
            "application/json":{
              "schema":{
                "$ref":"#/components/schemas/VoteOptionPayload"
              }
            }
          },
          "required":true
        },
        "responses":{
          "200":{
            "description":"OK"
          }
        }
      }
    },
    "/api/v1/users/activate/{userId}":{
      "patch":{
        "tags":[
          "Users"
        ],
        "summary":"Activate user",
        "operationId":"activate",
        "parameters":[
          {
            "name":"userId",
            "in":"path",
            "required":true,
            "schema":{
              "type":"integer",
              "format":"int64"
            }
          }
        ],
        "responses":{
          "200":{
            "description":"OK"
          }
        }
      }
    },
    "/api/v1/voting/data/{voteIdentifier}":{
      "get":{
        "tags":[
          "Voting"
        ],
        "summary":"Get voting data",
        "operationId":"getActiveVotingData",
        "parameters":[
          {
            "name":"voteIdentifier",
            "in":"path",
            "required":true,
            "schema":{
              "type":"string"
            }
          }
        ],
        "responses":{
          "200":{
            "description":"OK",
            "content":{
              "*/*":{
                "schema":{
                  "$ref":"#/components/schemas/VotingDataResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/votes/vote-data/{voteIdentifier}":{
      "get":{
        "tags":[
          "Votes"
        ],
        "summary":"Get active vote data by unique identifier",
        "operationId":"getVoteData",
        "parameters":[
          {
            "name":"voteIdentifier",
            "in":"path",
            "required":true,
            "schema":{
              "type":"string"
            }
          }
        ],
        "responses":{
          "200":{
            "description":"OK",
            "content":{
              "*/*":{
                "schema":{
                  "$ref":"#/components/schemas/VoteDataPayload"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/votes/all-votes":{
      "get":{
        "tags":[
          "Votes"
        ],
        "summary":"Get all existed votes",
        "operationId":"getAllVotes",
        "responses":{
          "200":{
            "description":"OK",
            "content":{
              "*/*":{
                "schema":{
                  "type":"array",
                  "items":{
                    "$ref":"#/components/schemas/VoteResponse"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/votes/all-active-vote":{
      "get":{
        "tags":[
          "Votes"
        ],
        "summary":"Get active vote data by unique identifier",
        "operationId":"getAllActiveVote",
        "responses":{
          "200":{
            "description":"OK",
            "content":{
              "*/*":{
                "schema":{
                  "type":"array",
                  "items":{
                    "$ref":"#/components/schemas/VoteDataPayload"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/votes/active-vote/{voteIdentifier}":{
      "get":{
        "tags":[
          "Votes"
        ],
        "summary":"Get active vote data by unique identifier",
        "operationId":"getActiveVote",
        "parameters":[
          {
            "name":"voteIdentifier",
            "in":"path",
            "required":true,
            "schema":{
              "type":"string"
            }
          }
        ],
        "responses":{
          "200":{
            "description":"OK",
            "content":{
              "*/*":{
                "schema":{
                  "$ref":"#/components/schemas/VoteDataPayload"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/users/{userId}":{
      "get":{
        "tags":[
          "Users"
        ],
        "summary":"Get user data",
        "operationId":"getUserData",
        "parameters":[
          {
            "name":"userId",
            "in":"path",
            "required":true,
            "schema":{
              "type":"integer",
              "format":"int64"
            }
          }
        ],
        "responses":{
          "200":{
            "description":"OK",
            "content":{
              "*/*":{
                "schema":{
                  "$ref":"#/components/schemas/UserResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/users/all-users":{
      "get":{
        "tags":[
          "Users"
        ],
        "summary":"Return list of all active users",
        "operationId":"getAllUsers",
        "responses":{
          "200":{
            "description":"OK",
            "content":{
              "*/*":{
                "schema":{
                  "type":"array",
                  "items":{
                    "$ref":"#/components/schemas/UserResponse"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/users/deactivate/{userId}":{
      "delete":{
        "tags":[
          "Users"
        ],
        "summary":"Deactivate user",
        "operationId":"deactivateUser",
        "parameters":[
          {
            "name":"userId",
            "in":"path",
            "required":true,
            "schema":{
              "type":"integer",
              "format":"int64"
            }
          }
        ],
        "responses":{
          "200":{
            "description":"OK"
          }
        }
      }
    }
  },
  "components":{
    "schemas":{
      "VotingRequest":{
        "type":"object",
        "properties":{
          "voteIdentifier":{
            "type":"string"
          },
          "userId":{
            "type":"integer",
            "format":"int64"
          },
          "optionId":{
            "type":"integer",
            "format":"int64"
          }
        },
        "required":[
          "optionId",
          "userId",
          "voteIdentifier"
        ]
      },
      "VoteDataPayload":{
        "type":"object",
        "properties":{
          "voteName":{
            "type":"string",
            "minLength":1
          },
          "uniqueIdentifier":{
            "type":"string",
            "minLength":1
          },
          "description":{
            "type":"string",
            "minLength":1
          },
          "durationPeriodInDays":{
            "type":"integer",
            "format":"int32"
          },
          "isAdult":{
            "type":"boolean"
          },
          "isMultiple":{
            "type":"boolean"
          },
          "options":{
            "type":"array",
            "items":{
              "$ref":"#/components/schemas/VoteOptionPayload"
            }
          }
        },
        "required":[
          "description",
          "durationPeriodInDays",
          "isAdult",
          "isMultiple",
          "uniqueIdentifier",
          "voteName"
        ]
      },
      "VoteOptionPayload":{
        "type":"object",
        "properties":{
          "id":{
            "type":"integer",
            "format":"int64"
          },
          "optionName":{
            "type":"string",
            "minLength":1
          }
        },
        "required":[
          "optionName"
        ]
      },
      "UserRequest":{
        "type":"object",
        "properties":{
          "firstName":{
            "type":"string",
            "minLength":1
          },
          "lastName":{
            "type":"string",
            "minLength":1
          },
          "email":{
            "type":"string",
            "minLength":1
          },
          "personalNumber":{
            "type":"string",
            "minLength":1
          },
          "age":{
            "type":"integer",
            "format":"int32",
            "minimum":1
          }
        },
        "required":[
          "age",
          "email",
          "firstName",
          "lastName",
          "personalNumber"
        ]
      },
      "UserResponse":{
        "type":"object",
        "properties":{
          "id":{
            "type":"integer",
            "format":"int64"
          },
          "firstName":{
            "type":"string"
          },
          "lastName":{
            "type":"string"
          },
          "email":{
            "type":"string"
          },
          "age":{
            "type":"integer",
            "format":"int32"
          }
        }
      },
      "VotingDataResponse":{
        "type":"object",
        "properties":{
          "voteIdentifier":{
            "type":"string"
          },
          "votingData":{
            "type":"object",
            "additionalProperties":{
              "type":"integer",
              "format":"int32"
            }
          }
        }
      },
      "VoteResponse":{
        "type":"object",
        "properties":{
          "voteName":{
            "type":"string"
          },
          "uniqueIdentifier":{
            "type":"string"
          },
          "description":{
            "type":"string"
          }
        }
      }
    }
  }
}